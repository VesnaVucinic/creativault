<div class="w3-content" style="max-width:800px">
  <div class="w3-row w3-padding">
    <header class="w3-display-container w3-wide w3-padding" id="home">
      <%= image_tag(@profile.image.variant(combine_options: { resize: "1200x1200>", background: "grey", gravity: "center"}), class: "w3-image w3-center", width: "1200", height: "1200")%>
        <div class="w3-display-left w3-padding-large">
          <h1 class="w3-jumbo w3-text-white w3-hide-small"><b><%= @profile.user.name %></b></h1>
          <h2 class="w3-red"><%= flash[:error] if flash[:error] %></h2>
          <h6><%= button_to('Update Profile', edit_user_profile_path(@user, @profile), {method: "get", class: "w3-button w3-white w3-padding-large w3-large w3-opacity w3-hover-opacity-off"}) if @user == @profile.user || @user.admin%></h6>
        </div>
    </header>
    <div class="w3-white w3-margin l6">
      <div class="w3-container w3-black">
        <h1>About Me:</h1>
        <p><%= @profile.bio %></p>
      </div>
    </div>

    <div class="w3-white w3-margin">
      <div class="w3-container w3-padding w3-black">
        <h4>My Creations:</h4>
      </div>
      <ul class="w3-ul w3-hoverable w3-white">
        <% @profile.user.creations.each do |creation| %>
        <li class="w3-padding-16">
          <%= link_to(image_tag(creation.image, class:"w3-left w3-margin-right", size:"50x50"), creation_path(creation)) %>
          <span class="w3-large"><%= creation.title %></span>
          <br>
          <span><%= creation.description%></span>
        </li>
        <%end%>
      </ul>
    </div>
    <hr>
  </div>
</div>
