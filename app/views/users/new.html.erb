<h1>Sign up</h1>

<%if flash[:errors] %>
<% flash[:errors].each do |alert| %>
  <ol>
    <li><%= alert %></li>
  </ol>
<% end %>
<% end %>

<%= form_for(@user) do |f| %>
<%= f.label(:name) %>
<%= f.text_field(:name) %>
<br>
<%= f.label(:email) %>
<%= f.text_field(:email) %>
<br>
<%= f.label(:password) %>
<%= f.password_field(:password) %>
<br>
<%= f.label(:password_confirmation) %>
<%= f.password_field(:password_confirmation) %>
<br>
<%= f.submit("Create Account") %>
<%end %>

<%= button_to('Sign In', root_path, {method: "get"}) unless user_currently_logged_in%>
