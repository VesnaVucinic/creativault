<h1>Hello, <%= @user.name %>! Let's Make a profile!</h1>

<%= form_for(@profile, url: user_profiles_path, html: {method: "post"}) do |f| %>
<%= f.label("Select a Profile Image") %>
<br>
<%= f.file_field :image %>
<br>
<%= f.label :header %>
<br>
<%= f.text_field :header %>
<br>
<%= f.label :bio %>
<br>
<%= f.text_area :bio %>
<br>
<%= f.submit %>
<%end %>
