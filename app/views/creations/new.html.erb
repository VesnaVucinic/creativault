<h1>Hello <%= @user.name %>! New Creation!</h1>

<%= form_for(@creation, url: user_creations_path, html: {method: "post"}) do |f| %>
<%= f.label("Creation Image") %>
<br>
<%= f.file_field :image %>
<br>
<%= f.label :title %>
<br>
<%= f.text_field :title %>
<br>
<%= f.label :description %>
<br>
<%= f.text_area :description %>
<br>
<%= f.label(:category) %>
<%= f.collection_select(:category_id, Category.all, :id, :name) %>
<br>
<%= f.submit %>
<%end %>
