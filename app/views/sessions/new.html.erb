<div class="w3-modal-content w3-margin-top" style="padding:32px">
  <div class="w3-white w3-margin">
     <div class="w3-container w3-padding w3-black">
       <h3 class="w3-center">Sign In</h3>
     </div>
   <div class="w3-container w3-white w3-margin-top">
      <p class="w3-red w3-margin-bottom w3-center"><%= flash[:error] if flash[:error] %></p>
      <%= form_for(@user, :url => {:controller => 'sessions', :action => "create"}) do |f| %>
      <%= f.label("Email:") %>
      <%= f.text_field(:email, class: "w3-input w3-border", placeholder: "Enter e-mail") %>
      <br>
      <%= f.label("Password:") %>
      <%= f.password_field(:password, class: "w3-input w3-border", placeholder: "Enter password") %>
      <br>
      <%= f.submit("Sign In", class: "w3-button w3-block w3-blue w3-margin") %>
      <%end %>
      <%= button_to('Google Sign In', "/auth/google_oauth2", {class: "w3-button w3-block w3-light-grey w3-margin"})%>
      <%= button_to('or Sign Up', new_user_path, {method: "get", class: "w3-button w3-block w3-light-grey w3-margin"})%>
  </div>
</div>
