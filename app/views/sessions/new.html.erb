<h1>Sign in</h1>

<h3><%= flash[:error] if flash[:error] %></h3>

<%= form_for(@user, :url => {:controller => 'sessions', :action => "create"}) do |f| %>
<%= f.label(:email) %>
<%= f.text_field(:email) %>
<br>
<%= f.label(:password) %>
<%= f.password_field(:password) %>
<br>
<%= f.submit("Sign In") %>
<%end %>

<%= button_to('Sign Up', new_user_path, {method: "get"}) unless user_currently_logged_in %>
<%= link_to('Sign in with Google', "/auth/google_oauth2") %>
