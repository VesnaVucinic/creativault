<h1>Sign in</h1>

<h3><%= flash[:error] if flash[:error] %></h3>

<%= form_for(@user, :url => {:controller => 'sessions', :action => "create"}) do |f| %>
<%= f.label(:email) %>
<%= f.text_field(:email) %>
<br>
<%= f.label(:password) %>
<%= f.password_field(:password) %>
<br>
<%= f.submit("Sign In") %>
<%end %>
